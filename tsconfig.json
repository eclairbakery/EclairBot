{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "target": "es2020",
        "lib": [
            "es2024"
        ],
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ],

        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ]
}