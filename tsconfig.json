{
    "compilerOptions": {
        "strict": false,
        "outDir": "dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "target": "es2020",
        "lib": [
            "es2024"
        ],
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
}